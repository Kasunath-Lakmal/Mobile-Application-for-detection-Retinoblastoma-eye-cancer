    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CREATE ACCOUNT"
        android:textColor="	#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/R_name_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/editext"
        android:ems="10"
        android:hint="YOUR NAME"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:autoSizeTextType="uniform"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#fcba03"
        android:textColorHint="#FEFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/L_email_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/editext"
        android:ems="10"
        android:hint="YOUR EMAIL"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:autoSizeTextType="uniform"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#fcba03"
        android:textColorHint="#F8F5F5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/R_name_id" />

    <EditText
        android:id="@+id/R_phone_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/editext"
        android:ems="10"
        android:hint="YOUR PHONE"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:autoSizeTextType="uniform"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#fcba03"
        android:textColorHint="#F8F5F5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_email_id" />

    <EditText
        android:id="@+id/L_password_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/editext"
        android:ems="10"
        android:hint="PASSWORD"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:autoSizeTextType="uniform"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#F8F5F5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/R_phone_id" />

    <Button
        android:id="@+id/register_btn_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background4"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textColor="#050000"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_password_id" />

    <TextView
        android:id="@+id/L_login_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="Already Registered?  Login Here"
        android:textColor="#050000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn_id" />

    <ProgressBar
        android:id="@+id/L_progressBar_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:progressBackgroundTint="#E11F1F"
        android:progressTint="#1B1919"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_login_text_id"
        app:layout_constraintVertical_bias="0.101" />

