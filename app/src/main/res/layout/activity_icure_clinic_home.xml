<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".IcureClinicHome">

    <TextView
        android:id="@+id/icure_clinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ICURE CLINIC"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/icure_imageView12"
        app:layout_constraintStart_toEndOf="@+id/icure_clinic_imgeView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icure_clinic_imgeView"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:background="@drawable/backarrow64"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icure_imageView12"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="#f4f4f4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="61dp">


        <ImageView
            android:id="@+id/imageView14"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="130dp"
            android:background="@drawable/finddoctorbig256"
            android:layout_height="130dp"
         />

        <TextView
            android:id="@+id/textView23"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nimsra perera" />

        <TextView
            android:id="@+id/textView24"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="4 Years" />

       <Button
            android:id="@+id/Clinic_details_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background3"
            android:text="Add Clinic Details"
            android:textColor="#050000"
            android:textSize="26sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/Clinic_history_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background3"
            android:text="Clinic Reminder"
            android:textColor="#050000"
            android:textSize="26sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/background"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>